{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      },
      {
        "transform": "typescript-transform-paths",
        "exclude": [
          "**/node_modules/**"
        ],
        "afterDeclarations": true
      }
    ]
  },
  "include": [
    "src/**/*",
    "src/types"
    //    "vite.config.ts",
    //    ".eslintrc"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
